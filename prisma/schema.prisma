generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Device {
  id          Int           @id @default(autoincrement())
  title       String        @unique
  Consumption Consumption[]
}

model Consumption {
  id         Int      @id @default(autoincrement())
  deviceId   Int
  device     Device   @relation(fields: [deviceId], references: [id])
  power      Float
  voltage    Float
  sumPower   Float
  sumVoltage Float
  created_at DateTime @default(now())
}
